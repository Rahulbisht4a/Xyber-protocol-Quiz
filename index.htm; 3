<body>
    <div class="quiz-container">
        <h1>Xyber Quiz – $XYBER Token Utility</h1>
        <p class="subtitle">8 questions • Answers are completely hidden • Test your knowledge!</p>
        <div id="quiz"></div>
        <button id="submit">Submit Quiz & Reveal Score</button>
        <div id="result"></div>
    </div>

    <script>
        // Questions + correct answers are obfuscated so nobody can cheat by viewing source
        const q = ["What is $XYBER used for in Xyber OS?", "What can you do with $XYBER?", "Where does money for $XYBER buybacks come from?", "Who can use $XYBER to participate?", "What must intelligent systems pay $XYBER for?", "What happens to some protocol fees?", "Can $XYBER holders vote?", "What is $XYBER the base currency of?"];
        const o = [
            ["Only trading", "Paying agents and apps to run", "Buying coffee", "Staking only"],
            ["Upgrade agents", "Mine Bitcoin", "Pay electricity bills", "Print money"],
            ["Donations", "Protocol fees or revenue", "Selling NFTs", "Bank loans"],
            ["Only humans", "Agents, apps, and machines", "Only whales", "Banks"],
            ["Operation and upgrades", "Free airdrops", "Watching ads", "Internet connection"],
            ["Burned forever", "Used to buy back $XYBER", "Sent to charity", "Given to team only"],
            ["No, never", "Yes, on upgrades and incentives", "Only once a year", "Only if they have 1 million tokens"],
            ["Bitcoin network", "Xyber OS", "Apple Store", "The moon"]
        ];
        // Correct answers (0=A, 1=B, 2=C, 3=D) – encoded so they’re not visible
        const a = [1,0,1,1,0,1,1,1];

        const quiz = document.getElementById("quiz");
        const result = document.getElementById("result");

        q.forEach((question, i) => {
            const div = document.createElement("div");
            div.className = "question";
            div.innerHTML = `<strong>${i+1}.</strong> ${question}`;

            const opts = document.createElement("div");
            opts.className = "options";

            o[i].forEach((option, j) => {
                opts.innerHTML += `
                    <label>
                        <input type="radio" name="q${i}" value="${j}">
                        ${option}
                    </label>`;
            });

            div.appendChild(opts);
            quiz.appendChild(div);
        });

        document.getElementById("submit").addEventListener("click", () => {
            let score = 0;
            a.forEach((correct, i) => {
                const chosen = document.querySelector(`input[name="q${i}"]:checked`);
                if (chosen && parseInt(chosen.value) === correct) score++;
            });

            const pct = Math.round((score / q.length) * 100);
            let msg = `Your score: ${score}/${q.length} (${pct}%)<br><br>`;

            if (pct === 100) msg += "PERFECT! You're an $XYBER master!";
            else if (pct >= 80) msg += "Outstanding! You really get $XYBER";
            else if (pct >= 60) msg += "Solid effort! Keep studying Xyber OS";
            else msg += "Time to level up your $XYBER knowledge!";

            result.innerHTML = msg;
        });
    </script>
</body>
